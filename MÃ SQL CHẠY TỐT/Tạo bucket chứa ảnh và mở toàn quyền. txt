-- 1. Tạo bucket tên là 'hinh-nen' (Công khai)
INSERT INTO storage.buckets (id, name, public)
VALUES ('hinh-nen', 'hinh-nen', true)
ON CONFLICT (id) DO NOTHING;

-- 2. Mở toàn quyền (Xem/Thêm/Sửa/Xóa) cho tất cả mọi người (kể cả khách vãng lai)
-- Lưu ý: Vì đây là hình nền nên để public cho tiện, sau này cần bảo mật thì siết lại sau.
CREATE POLICY "Public Access"
ON storage.objects FOR ALL
USING ( bucket_id = 'hinh-nen' )
WITH CHECK ( bucket_id = 'hinh-nen' );